{
  "name": "@txo/eslint-plugin-typescript",
  "version": "1.0.0",
  "description": "Technology Studio - Eslint typescript plugin",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/technology-studio/eslint-plugin-txo-typescript.git"
  },
  "author": {
    "name": "Technology Studio",
    "email": "npm@technologystudio.sk",
    "url": "https://github.com/technology-studio/"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint": "eslint --format=node_modules/eslint-formatter-pretty --ext .jsx,.js,.ts,.tsx .",
    "fixcode": "eslint --format=node_modules/eslint-formatter-pretty --ext .jsx,.js,.ts,.tsx . --fix",
    "git-hook": "yarn -s lint",
    "ncu-all": "ncu -i",
    "compile": "tsc",
    "prepare": "husky install && yarn compile",
    "sanity": "yarn lint && tsc --noEmit && yarn outdated && echo 'success'",
    "semantic-release": "semantic-release",
    "test": "yarn compile && cp -r lib node_modules/@txo/eslint-plugin-typescript/ && yarn lint"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@txo/eslint-plugin-typescript": "file:.",
    "@types/eslint": "^8.44.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.44.0",
    "eslint-formatter-pretty": "^5.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "husky": "^8.0.3",
    "npm-check-updates": "^16.10.15",
    "semantic-release": "^21.0.7",
    "semantic-release-slack-bot": "^4.0.2",
    "typescript": "^5.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
