{
  "name": "@txo/eslint-plugin-typescript",
  "version": "1.0.1",
  "description": "Technology Studio - Eslint typescript plugin",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/technology-studio/eslint-plugin-txo-typescript.git"
  },
  "author": {
    "name": "Technology Studio",
    "email": "npm@technologystudio.sk",
    "url": "https://github.com/technology-studio/"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "yarn compile && mkdir -p node_modules/@txo/eslint-plugin-typescript/lib && cp -r lib/* node_modules/@txo/eslint-plugin-typescript/lib && cp package.json node_modules/@txo/eslint-plugin-typescript/",
    "lint": "yarn build && eslint --format=node_modules/eslint-formatter-pretty --ext .jsx,.js,.ts,.tsx .",
    "fixcode": "eslint --format=node_modules/eslint-formatter-pretty --ext .jsx,.js,.ts,.tsx . --fix",
    "git-hook": "yarn -s lint",
    "ncu-all": "ncu -i",
    "compile": "tsc",
    "prepare": "husky install && yarn build",
    "sanity": "yarn lint && yarn test && tsc --noEmit && yarn outdated && echo 'success'",
    "semantic-release": "semantic-release",
    "test": "jest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@txo/commitlint": "^1.0.5",
    "@txo/semantic-release": "^1.0.1",
    "@types/eslint": "^8.44.6",
    "@types/jest": "^29.5.7",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-formatter-pretty": "^5.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "npm-check-updates": "^16.14.6",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
